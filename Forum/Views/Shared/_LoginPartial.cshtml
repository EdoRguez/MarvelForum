@using Microsoft.AspNetCore.Identity
@using Forum.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="text-danger">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn btn-link navbar-btn navbar-link text-danger">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item mr-2"><a class="nav-link text-danger" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li class="nav-item mr-3"><a class="nav-link text-danger" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    </ul>
}